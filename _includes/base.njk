<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or siteTitle }}</title>
    <script>
        window.SITE_PATH_PREFIX = '{{ '/' | url }}'.replace(/\/$/, '');
    </script>
    <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="layout">
        <!-- Mobile Menu Toggle -->
        <button class="mobile-menu-toggle" aria-label="Toggle navigation menu">
            <span></span>
            <span></span>
            <span></span>
        </button>
        
        <!-- Sidebar Navigation -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="{{ '/' | url }}" class="logo">
                    <h2>{{ siteLogo }} {{ siteTitle }}</h2>
                </a>
                <button class="theme-toggle" aria-label="Toggle dark mode" title="Toggle dark mode">
                    <span class="theme-icon theme-icon-light">‚òÄÔ∏è</span>
                    <span class="theme-icon theme-icon-dark">üåô</span>
                </button>
            </div>
            
            <div class="nav-content">
                <!-- Search Bar -->
                <div class="search-container">
                    <input type="text" class="search-input" placeholder="Rechercher dans les docs..." aria-label="Search documentation">
                    <span class="search-icon">üîç</span>
                    <div class="search-results" id="searchResults"></div>
                </div>
                
                <!-- Home Link -->
                <a href="{{ '/' | url }}" class="nav-item {{ 'active' if page.url == '/' }}">
                    <span class="nav-icon">üè†</span>
                    Home
                </a>
                
                <!-- Dynamic Navigation -->
                {% if navigation and navigation.length > 0 %}
                    <div class="nav-section">
                        <h3 class="nav-section-title">Documentation</h3>
                        {% for item in navigation %}
                            {% if item.type == 'file' %}
                                <a href="{{ item.url | url }}" class="nav-item">
                                    <span class="nav-icon">üìÑ</span>
                                    {{ item.title }}
                                </a>
                            {% elif item.type == 'directory' %}
                                <div class="nav-dropdown">
                                    <button class="nav-dropdown-toggle" aria-expanded="false">
                                        <span class="nav-icon">üìÅ</span>
                                        {{ item.title }}
                                        <span class="dropdown-arrow">‚ñ∂</span>
                                    </button>
                                    <div class="nav-dropdown-content">
                                        {% for child in item.children %}
                                            {% if child.type == 'file' %}
                                                <a href="{{ child.url | url }}" class="nav-item">
                                                    <span class="nav-icon">üìÑ</span>
                                                    {{ child.title }}
                                                </a>
                                            {% elif child.type == 'directory' %}
                                                <div class="nav-dropdown">
                                                    <button class="nav-dropdown-toggle" aria-expanded="false">
                                                        <span class="nav-icon">üìÅ</span>
                                                        {{ child.title }}
                                                        <span class="dropdown-arrow">‚ñ∂</span>
                                                    </button>
                                                    <div class="nav-dropdown-content">
                                                        {% for grandchild in child.children %}
                                                            {% if grandchild.type == 'file' %}
                                                                <a href="{{ grandchild.url | url }}" class="nav-item">
                                                                    <span class="nav-icon">üìÑ</span>
                                                                    {{ grandchild.title }}
                                                                </a>
                                                            {% elif grandchild.type == 'directory' %}
                                                                <div class="nav-dropdown">
                                                                    <button class="nav-dropdown-toggle" aria-expanded="false">
                                                                        <span class="nav-icon">üìÅ</span>
                                                                        {{ grandchild.title }}
                                                                        <span class="dropdown-arrow">‚ñ∂</span>
                                                                    </button>
                                                                    <div class="nav-dropdown-content">
                                                                        {% for greatgrandchild in grandchild.children %}
                                                                            <a href="{{ greatgrandchild.url | url }}" class="nav-item">
                                                                                <span class="nav-icon">üìÑ</span>
                                                                                {{ greatgrandchild.title }}
                                                                            </a>
                                                                        {% endfor %}
                                                                    </div>
                                                                </div>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </nav>
        
        <!-- Main Content -->
        <main class="main-content">
            <div class="content-wrapper">
                {{ content | safe }}
            </div>
        </main>
    </div>
    
    <script src="{{ '/js/main.js' | url }}"></script>
</body>
</html>