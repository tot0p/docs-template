---
layout: base.njk
eleventyComputed:
  title: "{{ title or (page.fileSlug | replace('-', ' ') | titleCase) }}"
---

<article class="documentation">
    <header class="doc-header">
        <h1>{{ title or (page.fileSlug | replace('-', ' ') | titleCase) }}</h1>
        {% if description %}
            <p class="doc-description">{{ description }}</p>
        {% endif %}
    </header>
    
    <div class="doc-content">
        {{ content | safe }}
    </div>
    
    <footer class="doc-footer">
        <p class="doc-meta">
            Last updated: <time datetime="{{ page.date | dateIso }}">{{ page.date | dateReadable }}</time>
        </p>
    </footer>
</article>